#app-bar
  background: default-primary-color
  width: 100%
  height: 70px
  display: inline-block
  position: fixed
  box-shadow: 0px 0px 5px
  font-weight: 300
  z-index: 1500 !important


#nav-icon
  div
    width: 20px
    height: 2px
    background-color: white
    margin: 3px auto
    border-radius: 2px
    vertical-align: middle

.w-hamburger
  height: 70px
  width: 50px
  margin: 0px 10px
  vertical-align: middle

.w-hamburger::before
  content: ""
  display: inline-block
  //height: 100%
  width: 1%
  vertical-align: middle

.w-hamburger::after
  content: ""
  display: inline-block
  //height: 100%
  width:1%
  vertical-align: middle

#nav-icon
  background-color: transparent
  border: 0px
  margin: 15px 0
  display: inline-block
  vertical-align: middle
  border-radius: 50%
  height: 40px
  width: 40px

#app-bar
  .w-8
    top: 50%

#app-bar
  h1
    font-family: Roboto
    color: text-primary-color
    font-size: 22px
    font-weight: 400
    vertical-align: middle
    -webkit-font-smoothing: antialiased
    -webkit-margin-before: 0em
    -webkit-margin-after: 0em
    line-height: 70px
    width: 100%
    vertical-align: middle
    margin: 0 0
