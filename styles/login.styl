/////////////////////--- styles ---///////////////////////////////////////////////////

#login
  //width: 25%
  height: 100%
  background-color: default-primary-color
  color: text-primary-color

  h1
    font-family: Roboto
    font-weight: 300
    font-size: 36px
    color: text-primary-color
    margin-top: 0
    padding-top: 20px
    padding-left: 20px

#login-fields
  position: absolute
  width: 450px
  left: 0
  right: 0
  margin-left: auto
  margin-right: auto
  top: 30%
  text-align: center
  border: 2px solid text-primary-color
  border-radius: 5px
  padding: 20px 10px

  input
    color: text-primary-color
    width: 80%
    text-align: center
    background-color: transparent
    border-color: text-primary-color
    margin: 5px 10% 25px 8%

  input[type="password"]::placeholder, input[type="email"]::placeholder
    color: text-primary-color

.left-align-login
  position: fixed
  right: 50px
  top: 40px
  color: text-primary-color

.divider
  margin: 30px 5%
  width: 90%
  height: 3px
  background-color: text-primary-color


// -----------------------------------------------------------------

.login
  position: fixed
  right: 0
  z-index: 99
  width: 300px

#user-menu
  width: 100%
  background-color: default-primary-color
  margin: 0
  box-shadow: 0 0px 10px rgba(0,0,0,0.5)
  border-radius: 2px
  display: none

  a
    color: text-primary-color

    &:visited
      color: text-primary-color

.user-menu-container
  //position: absolute
  right: 0
  top: 0

#user-email
  padding-right: 30px
  color: text-primary-color
  z-index: 101
  cursor: pointer
